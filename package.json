{
  "name": "os-simulator",
  "version": "1.0.0",
  "description": "A simulated OS environment for LLM interaction",
  "main": "server.js",
  "scripts": {
    "start": "NODE_ENV=production pnpm run init:db:prod && node dist/server.js",
    "dev": "NODE_ENV=development pnpm run init:db:dev && nodemon src/server.ts",
    "build": "tsc",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "prepare": "husky install",
    "test:user": "ts-node qa/userTest.ts",
    "test:ai": "ts-node qa/aiTest.ts",
    "test:twitter": "ts-node scripts/twitter.ts",
    "init:db:dev": "NODE_ENV=development ts-node scripts/initDb.ts",
    "init:db:prod": "NODE_ENV=production ts-node scripts/initDb.ts",
    "backup:db": "ts-node scripts/backupDb.ts"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.25.0",
    "axios": "^1.7.3",
    "better-sqlite3": "^11.7.0",
    "body-parser": "^1.19.0",
    "date-fns-tz": "^3.2.0",
    "dotenv": "^16.4.5",
    "express": "^4.17.1",
    "openai": "^4.55.4",
    "replicate": "^1.0.1",
    "sqlite": "^5.1.1",
    "sqlite3": "^5.1.7",
    "twitter-api-v2": "1.18.2",
    "uuid": "^11.0.3"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.12",
    "@types/express": "^4.17.21",
    "@types/node": "^20.11.24",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^7.1.0",
    "@typescript-eslint/parser": "^7.1.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "husky": "^9.0.11",
    "nodemon": "^3.1.0",
    "prettier": "^3.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  }
}
